# Environment variables for Cartonization Service
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Configuration
# =============================================================================
SPRING_PROFILES_ACTIVE=docker
APP_VERSION=1.0.0

# =============================================================================
# Database Configuration - MongoDB
# =============================================================================
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=admin123
MONGODB_PASSWORD=cartonization_pass
MONGODB_DATABASE=cartonization
MONGODB_USER=cartonization_user

# =============================================================================
# Cache Configuration - Redis
# =============================================================================
REDIS_PASSWORD=redis123

# =============================================================================
# External Services
# =============================================================================
PRODUCT_CATALOG_BASE_URL=http://product-catalog:8080

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_CONSUMER_GROUP_ID=cartonization-service

# =============================================================================
# Security & Monitoring
# =============================================================================
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# =============================================================================
# Development/Debug Settings
# =============================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO

# =============================================================================
# Production Settings
# =============================================================================
# SSL_ENABLED=true
# SSL_KEYSTORE_PATH=/etc/ssl/keystore.jks
# SSL_KEYSTORE_PASSWORD=your-keystore-password

# =============================================================================
# Monitoring & Observability
# =============================================================================
# PROMETHEUS_ENABLED=true
# JAEGER_AGENT_HOST=jaeger
# JAEGER_AGENT_PORT=6831

# =============================================================================
# Resource Limits (for production)
# =============================================================================
JVM_MAX_HEAP_SIZE=1g
JVM_INITIAL_HEAP_SIZE=512m
JVM_MAX_METASPACE_SIZE=256m